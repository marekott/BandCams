<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] | bandcams</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <img class="img-fluid" src="~/img/bandcams_logo.jpg" alt="bandcams logo" />
        <a class="navbar-brand text-white" href="@Url.Page("/Index")">BANDCAMS</a>
        <button class="navbar-toggler custom-toggler ml-auto" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Page("/Index")">START</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Page("/Calendar")">KALENDARZ</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link"  href="@Url.Page("/ShowOnBandCams")">POKAŻ SIĘ NA BANDCAMS</a>
                </li>
            </ul>
        </div>
    </nav>

    @if (@ViewBag.Title == "Home")
    {
        <div class="paralax-image paralax-image-responsive mb-4">
            <div class="row h-100 m-0">
                <div class="col-md-12 align-self-center">
                    <h1>BANDCAMS</h1>
                    <p>ARTYŚCI W ZASIĘGU EKRANU</p>
                </div>
            </div>
        </div>
    }

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer">
        <div class="container">
            <div class="mx-auto text-center col-md-12 mt-2">
                <a href="https://www.facebook.com/bandcamspl/">
                    <img src="~/img/fb_logo.jpg" alt="facebook link" />
                </a>
                <a href="https://www.instagram.com/bandcams/">
                    <img src="~/img/instagram_logo.jpg" alt="instagram link" />
                </a>
            </div>
            <div class="mx-auto text-center col-md-12 text-white mt-2 mb-1">
                &copy; 2020 - by bandcams
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>